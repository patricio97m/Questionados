<main class="footer-final">
    <div class="container mt-3 p-4 border rounded col-md-6 bg-white">
        <h2>Editar pregunta</h2>

    {{#pregunta}}
        <form method="post" action="/juego/actualizarPregunta" enctype="multipart/form-data">
            <div class="mb-3">
                <div class="mb-2">
                    <label for="pregunta" class="form-label">Pregunta: </label>
                    <input type="text" class="form-control" id="pregunta" name="pregunta" value="{{pregunta}}" required>
                </div>

                <div class="row">
                {{#respuestas}}
                    {{#esCorrecta}}
                        <div class="col-md-6">
                            <div class="mb-2">
                                <label for="respuestaCorrecta" class="form-label">Respuesta <b class="text-success">correcta</b>: </label>
                                <input type="text" class="form-control" id="respuestaCorrecta" name="respuestaCorrecta" required value="{{respuesta}}">
                            </div>
                        </div>
                    {{/esCorrecta}}
                    {{^esCorrecta}}
                        <div class="col-md-6">
                            <div class="mb-2">
                                <label for="respuestaIncorrecta1" class="form-label">Respuesta <b class="text-danger">incorrecta</b>:</label>
                                <input type="text" class="form-control" id="respuestaIncorrecta{{idRespuesta}}" name="respuestaIncorrecta[{{idRespuesta}}]" required value="{{respuesta}}">
                            </div>
                        </div>
                    {{/esCorrecta}}
                {{/respuestas}}
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label for="categoria" class="form-label">Categoría:</label>
                            <select class="form-select" id="categoria" name="categoria" required>
                                <option value="{{categoria}}" selected>Elija una categoría...</option>
                                <option value="Arte">Arte</option>
                                <option value="Ciencia">Ciencia</option>
                                <option value="Deporte">Deporte</option>
                                <option value="Entretenimiento">Entretenimiento</option>
                                <option value="Geografía">Geografía</option>
                                <option value="Historia">Historia</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label for="dificultad" class="form-label">Dificultad:</label>
                            <select class="form-select" id="dificultad" name="dificultad" required>
                                <option value="{{dificultad}}" selected>Elija una dificultad...</option>
                                <option value="facil">Fácil</option>
                                <option value="medio">Medio</option>
                                <option value="dificil">Difícil</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end align-items-center">
                <a href="/home/{{redirigirA}}" class="btn btn-secondary me-1">Volver</a>
                <button type="submit" class="btn btn-primary" name="idPregunta" value="{{idPregunta}}">Actualizar pregunta</button>
            </div>
        </form>
    {{/pregunta}}
    </div>
</main>
