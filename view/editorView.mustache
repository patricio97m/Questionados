<main class="footer-final">
    <div class="container mt-3 p-4 border rounded col-md-6 bg-white">
        {{#notificacionPregunta}}
            <div class="alert alert-success" role="alert">
                {{notificacionPregunta}}
            </div>
        {{/notificacionPregunta}}

        <h2>{{titulo}}</h2>

        {{#preguntas}}
            <div class="list-group mt-3">
                <a class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{pregunta}}</h5>
                        <small>{{fecha_pregunta}}</small>
                    </div>
                    {{#motivoReporte}}<p>Motivo del reporte: <b>{{motivoReporte}}</b></p>{{/motivoReporte}}
                    <ul>
                        {{#respuestas}}
                            {{#esCorrecta}}<li><p class="mb-1 text-success">{{respuesta}}</p></li>{{/esCorrecta}}
                            {{^esCorrecta}}<li><p class="mb-1 text-danger">{{respuesta}}</p></li>{{/esCorrecta}}
                        {{/respuestas}}
                    </ul>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <small>{{rolUsuario}}: {{usuario}} | Categor√≠a: {{categoria}} | Dificultad: {{dificultad}}</small>
                        <div class="d-flex">
                            <form method="post" action="/juego/editarPregunta" class="pe-1">
                                <button type="submit" class="btn btn-sm btn-warning" name="idPregunta" value="{{idPregunta}}" title="Editar pregunta">
                                    <img src="../public/editar_blanco.svg" alt="editar">
                                </button>
                            </form>
                            <form method="post" action="/juego/eliminarSugerencia" class="pe-1">
                                <button type="submit" class="btn btn-sm btn-danger" name="idPregunta" value="{{idPregunta}}" title="Eliminar pregunta">
                                    <img src="../public/eliminar.svg" alt="eliminar">
                                </button>
                            </form>
                            <form method="post" action="/juego/{{actionBtnAceptar}}">
                                {{#actionBtnAceptar}}
                                    <button type="submit" class="btn btn-sm btn-success" name="idPregunta" value="{{idPregunta}}" title="Finalizar">
                                        <img src="../public/aceptar.svg" alt="aceptar">
                                    </button>
                                {{/actionBtnAceptar}}

                            </form>
                        </div>
                    </div>
                </a>
            </div>
        {{/preguntas}}

        {{^preguntas}}
            <h5 class="mt-3">No hay nada para moderar. <a href="/">Volver al inicio</a>.</h5>
        {{/preguntas}}

    </div>
</main>